{
  "id": "/jenkins/build/master",
  "cpus": 2,
  "mem": 8192,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "basho/jenkins-mesos",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 8080, "hostPort": 0, "protocol": "tcp" },
        { "containerPort": 0, "hostPort": 0, "protocol": "tcp" }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 300,
      "timeoutSeconds": 300,
      "maxConsecutiveFailures": 25,
      "ignoreHttp1xx": false
    }
  ],
  "user": "jenkins"
}
