{
  "id": "/jenkins/build/master",
  "cpus": 2,
  "mem": 4096,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "basho/jenkins-mesos",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 8080, "hostPort": 0, "protocol": "tcp" },
        { "containerPort": 0, "hostPort": 0, "protocol": "tcp" }
      ],
      "privileged": true,
      "forcePullImage": true
    },
    "volumes": [
      {
        "containerPath": "/var/run/docker.sock",
        "hostPath": "/var/run/docker.sock",
        "mode": "RW"
      }
    ]
  },
  "healthChecks": [
    {
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 300,
      "timeoutSeconds": 300,
      "maxConsecutiveFailures": 25,
      "ignoreHttp1xx": false
    }
  ],
  "user": "jenkins",
  "env": {
    "JENKINS_CONFIG_REPO": "basho-bin/jenkins-mesos-softlayer"
  },
  "uris": [
    "file:///home/jenkins/ssh.tar.gz"
  ]
}
