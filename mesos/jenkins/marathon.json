{
  "id": "/jenkins/master",
  "cpus": 2,
  "mem": 4096,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "basho/jenkins-mesos",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 8080, "hostPort": 0, "protocol": "tcp" },
        { "containerPort": 0, "hostPort": 0, "protocol": "tcp" }
      ],
      "privileged": true,
      "forcePullImage": true
    }
  },
  "volumes": [
    {
      "containerPath": "/var/run/docker.sock",
      "hostPath": "/var/run/docker.sock",
      "mode": "RW"
    },
    {
      "containerPath": "/home/jenkins/.ssh",
      "hostPath": "/var/jenkins_home/.ssh",
      "mode": "RW"
    },
    {
      "containerPath": "/home/jenkins/.gitconfig",
      "hostPath": "/var/jenkins_home/.gitconfig",
      "mode": "RO"
    }
  ],
  "healthChecks": [
    {
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 300,
      "timeoutSeconds": 300,
      "maxConsecutiveFailures": 25,
      "ignoreHttp1xx": false
    }
  ],
  "user": "jenkins"
}
